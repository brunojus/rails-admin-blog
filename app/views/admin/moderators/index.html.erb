<h1>Página dos Administradores</h1>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Nome</th>
            <th>usuário</th>
            <th>criado a</th>
            <th>ações</th>
        </tr>
    </thead>
    <tbody>
      <% @moderators.each do |moderator| %>
        <tr>
            <td><%= moderator.fullname %></td>
            <td><%= moderator.username %></td>
            <td><%= time_ago_in_words(moderator.created_at)%> atrás</td>
            <td>
                <%= link_to 'Editar', edit_admin_moderator_path(moderator) %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>